<?xml version="1.0" encoding="utf-8"?> 
<selector xmlns:android="http://schemas.android.com/apk/res/android" > 
    <!-- 获得焦点但未按下时的背景图片 --> 
    <item android:state_focused="true" android:state_enabled="true" android:state_pressed="false" android:drawable="@drawable/shape_sure_btn" /> 
     <!-- 按下时的背景图片 --> 
    <item android:state_enabled="true" android:state_pressed="true" android:drawable="@drawable/shape_sure_btn_pressed" /> 
    <!-- 按下时的背景图片 --> 
    <item android:state_enabled="true" android:state_checked="true" android:drawable="@drawable/shape_sure_btn_pressed" /> 
    <!-- 默认时的背景图片 --> 
    <item android:drawable="@drawable/shape_sure_btn" /> 
</selector> 